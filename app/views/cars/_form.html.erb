<%= form_with(model: car, local: true) do |form| %>
  <% if car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
        <% car.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, :required => true %>
  </div>

  <div class="field">
    <%= form.label :car_type %>
    <%= form.text_field :car_type %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.select :color, Car.colors.keys %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, accept: 'image/png' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
